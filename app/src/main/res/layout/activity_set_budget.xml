<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#6666FF"
    tools:context="com.example.administrator.sharedpreferences.SetBudget">

    <TextView
        android:text="Enter your monthly budget categorically:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="20dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />


    <EditText
        android:hint="Food:"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/edit1"
        />

    <EditText
        android:hint="Cloth:"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/edit2"
        />

    <EditText
        android:hint="House Rent:"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/edit3"
        />

    <EditText
        android:hint="Tuition Fees:"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/edit4"
        />

    <EditText
        android:hint="Health Bills:"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/edit5"
        />

    <EditText
        android:hint="Other Purposes:"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:id="@+id/edit6"
        />



    <Button
        android:text="Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="#0D0D0D"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/enter_button"/>



</LinearLayout>
